<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".Donation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="DONATION PORTAL"
            android:id="@+id/hdfc"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Name"
            android:layout_below="@+id/hdfc"
            android:id="@+id/e1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/e2"
            android:hint="Enter Your Mail Id"
            android:layout_below="@+id/e1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/e3"
            android:inputType="number"
            android:hint="Enter Your Phone Number"
            android:layout_below="@+id/e2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/e4"
            android:hint="Enter Comments(If Any)"
            android:layout_below="@+id/e3"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/im"
            android:src="@drawable/dp"
            android:layout_below="@+id/e4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:id="@+id/or"
            android:textAlignment="center"
            android:layout_below="@+id/im"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VPA:cleangangafund@SBI"
            android:layout_below="@+id/or"
            android:textAlignment="center"
            android:id="@+id/vpa"
            android:gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vpa"
            android:id="@+id/b1"
            android:layout_centerInParent="true"
            android:text="PAY"/>


    </RelativeLayout>

</ScrollView>