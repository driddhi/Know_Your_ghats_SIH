<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="LIST of states"
            android:src="@drawable/ls"
            android:scaleType="fitXY"
            android:id="@+id/b1" />

        <ImageButton
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/b1"
            android:layout_marginTop="-2dp"
            android:scaleType="fitXY"
            android:src="@drawable/sg" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/b3"
            android:text="Donation"
            android:src="@drawable/db"
            android:scaleType="fitXY"
            android:layout_below="@+id/b2"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/b4"
            android:text="Nearby Ghats"
            android:src="@drawable/ng"
            android:scaleType="fitXY"
            android:layout_below="@+id/b3" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/b5"
            android:text="Add Info about ghat not present in app"
            android:src="@drawable/ag"
            android:scaleType="fitXY"
            android:layout_below="@+id/b4" />
    </RelativeLayout>


</ScrollView>