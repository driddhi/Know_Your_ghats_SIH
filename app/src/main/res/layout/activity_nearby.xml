<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".Nearby">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Ferry Ghat"
            android:id="@+id/t1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t2"
            android:text="A Ghat that is used for passenger and cargo transportation and crossing of a river by means of Steamer, Boats, or Ships."
            android:layout_marginTop="20dp"
            android:layout_below="@+id/t1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t3"
            android:text="Normal Ghat"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/t2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t4"
            android:text=" A Ghat that is used for bathing, cleaning purposes and ritual practises."
            android:layout_marginTop="20dp"
            android:layout_below="@+id/t3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t5"
            android:text="Ritual Ghat"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/t4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t6"
            android:text="A Ghat that is solely specified for ritual practices like Chatt puja, Durga Bisarjan. Bathing is allowed."
            android:layout_marginTop="20dp"
            android:layout_below="@+id/t5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t7"
            android:text="Cremation/Samshaan Ghat"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/t6"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t8"
            android:text="A Ghat that is used for funeral or burial purposes."
            android:layout_marginTop="20dp"
            android:layout_below="@+id/t7"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t9"
            android:text="State Tourism Ghat"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/t8"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t10"
            android:text="A Ghat which features a tourist destination or monument near it."
            android:layout_marginTop="20dp"
            android:layout_below="@+id/t9"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv"
            android:layout_below="@+id/t10"
            android:text="Choose Type of Ghat"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg"
            android:layout_below="@+id/tv">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ferry Ghat"
                android:id="@+id/rd1"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal Ghat / Ritual Ghat"
                android:id="@+id/rd2"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cremation Ghat / Samshaan Ghat"
                android:id="@+id/rd3"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State Tourism Ghat"
                android:id="@+id/rd4"/>

        </RadioGroup>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rg"
            android:layout_centerInParent="true"
            android:id="@+id/b"
            android:text="Submit"/>
    </RelativeLayout>


</ScrollView>